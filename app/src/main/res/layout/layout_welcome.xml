<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/bt_test_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试用例界面" />

        <Button
            android:id="@id/bt_playOrPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放" />

        <Button
            android:id="@id/bt_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/bt_playOrPause"
            android:text="上一首" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/bt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bt_playOrPause"
            android:text="下一首" />

        <Button
            android:id="@id/bt_conectnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_playOrPause"
            android:text="联网" />

        <Button
            android:id="@id/bt_forbiden_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bt_playOrPause"
            android:text="禁用Mic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/scrcpyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动录屏服务"
            />
    </LinearLayout>

</LinearLayout>